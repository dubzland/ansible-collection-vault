---
extends: default
ignore: |
  .gitlab-ci.yml
  .ansible/
  .tox/
  .venv/
  molecule/
rules:
  braces:
    max-spaces-inside: 1
  comments:
    min-spaces-from-content: 1
  comments-indentation: false
  line-length:
    allow-non-breakable-words: true
    max: 120
  octal-values:
    forbid-explicit-octal: true
    forbid-implicit-octal: true
